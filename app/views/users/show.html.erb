<% provide(:title, @user.name) %> 
<div class="container">
  <div class="row">
    <aside class="col-md-4"> 
      <section class="user_info">
        <h1>
         <%= gravatar_for @user, size: 50 %>
         <%= @user.name %>
         <%= Digest::MD5::hexdigest(@user.email)%>
        </h1>
      </section>
    </aside>
  </div>
</div>